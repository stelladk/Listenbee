<resources>

    <!-- BASE APPLICATION -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- LOGIN SCREEN -->
    <style name="LoginContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <!-- Misc -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- TEXTVIEW -->
    <style name="LogInTitle">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleView">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_alignParentTop">true</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Misc -->
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="RecentView">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/selections_container</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Misc -->
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="InfoTitle">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoDesc">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- IMAGEVIEW -->
    <style name="ImageView">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/title_fragment</item>
        <!-- COLOUR -->
        <item name="android:background">@color/white</item>
        <!-- MISC -->
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- DIVIDER -->
    <style name="Divider">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/title_fragment</item>
        <!-- Color -->
        <item name="android:background">@color/wolf_grey</item>
    </style>

    <!-- FORMS -->
    <style name="LogInForm">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <!-- Text -->
        <item name="android:ems">8</item>
        <item name="android:textColor">@color/black</item>
        <!-- Color -->
        <item name="android:backgroundTint">@color/red_flag</item>
        <item name="android:textCursorDrawable">@null</item>
        <!-- Misc -->
        <item name="paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- LIST -->
    <style name="List">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/divider</item>
        <!-- Misc -->
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ProfileInfo">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/profile_image</item>
<!--        &lt;!&ndash; Misc &ndash;&gt;-->
<!--        <item name="android:paddingStart">16dp</item>-->
<!--        <item name="android:paddingEnd">16dp</item>-->
    </style>

    <!-- BUTTON -->
    <style name="LoginButton">
        <!-- Dimensions -->
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/login_form_container</item>
        <item name="android:layout_centerInParent">true</item>
        <!-- Text -->
        <item name="android:textSize">16sp</item>
        <!-- Color -->
        <item name="android:background">@drawable/button_shape</item>
        <!-- Misc -->
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="SignUpButton">
        <!-- Dimensions -->
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/login_btn</item>
        <item name="android:layout_centerInParent">true</item>
        <!-- Text -->
        <item name="android:textColor">@color/red_flag</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Misc -->
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ImageButton">
        <!-- Dimensions -->
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <!-- Padding -->
        <item name="android:padding">12dp</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <item name="android:tint">@color/red_flag</item>
    </style>

    <style name="SelectionButton">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Text -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/selection_btn_text_color_selector</item>
        <item name="android:textAlignment">textStart</item>
        <!-- Color -->
        <item name="android:drawableTint">@color/selection_btn_icon_color_selector</item>
        <item name="android:background">@drawable/selection_btn_color_selector</item>
        <!-- Misc -->
        <item name="android:stateListAnimator">@null</item>
    </style>


    <!--  RECENT -->
    <style name="RecentContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/recent_title</item>
    </style>

    <!-- NAVIGATION BAR -->
    <style name="Toolbar">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <!-- Alignment -->
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="BottomNavigationBar">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Padding -->
        <item name="android:padding">12dp</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Alignment -->
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- FRAGMENT CONTAINER FOR BOTTOM NAVIGATION BAR -->
    <style name="FragContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>


<!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

<!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>
