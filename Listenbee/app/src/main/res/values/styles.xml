<resources>

    <!-- BASE APPLICATION -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TEXTVIEW -->
    <style name="TitleView">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_alignParentTop">true</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Misc -->
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="RecentView">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/selections_container</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Misc -->
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- DIVIDER -->
    <style name="Divider">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/title_fragment</item>
        <!-- Color -->
        <item name="android:background">@color/wolf_grey</item>
    </style>

    <!-- LIST -->
    <style name="List">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/divider</item>
        <!-- Misc -->
        <item name="android:orientation">vertical</item>
    </style>

    <!-- BUTTON -->
    <style name="SelectionButton">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Text -->
        <item name="android:textColor">@color/selection_btn_text_color_selector</item>
        <item name="android:textAlignment">textStart</item>
        <!-- Color -->
        <item name="android:drawableTint">@color/selection_btn_icon_color_selector</item>
        <item name="android:background">@drawable/selection_btn_color_selector</item>
        <!-- Misc -->
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!--  RECENT -->
    <style name="RecentContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/recent_title</item>
    </style>

    <!-- NAVIGATION BAR -->
    <style name="BottomNavigationBar">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Padding -->
        <item name="android:padding">12dp</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Alignment -->
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- FRAGMENT CONTAINER FOR BOTTOM NAVIGATION BAR -->
    <style name="FragContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>


<!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

<!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>
