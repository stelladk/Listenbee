<resources>

    <!-- BASE APPLICATION -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- NAVIGATION BAR -->
    <style name="BottomNavigationBar">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Padding -->
        <item name="android:padding">12dp</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Alignment -->
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- TEXTVIEW -->
    <style name="TitleView">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_alignParentTop">true</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <!-- TODO WEIGHT -->
        <!-- Misc -->
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="RecentView">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/divider</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <!-- TODO WEIGHT -->
        <!-- Misc -->
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <!-- DIVIDER -->
    <style name="Divider">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/title_fragment</item>
        <!-- Color -->
        <item name="android:background">@color/wolf_grey</item>
        <!-- Misc -->
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- FRAGMENT CONTAINER FOR BOTTOM NAVIGATION BAR -->
    <style name="FragContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>


<!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

<!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>
