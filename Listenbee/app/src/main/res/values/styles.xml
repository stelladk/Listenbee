<resources>

    <!-- BASE APPLICATION -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- FRAGMENT CONTAINER -->
    <style name="FragContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Alignment -->
        <item name="android:layout_above">@id/music_player_container</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Misc -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- MUSIC PLAYER SMALL -->
    <style name="MusicPlayer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_above">@id/bottom_navigation</item>
        <!-- Color -->
        <item name="android:background">@color/white_smoke</item>
        <!-- Misc -->
        <item name="android:padding">10dp</item>
    </style>

    <!-- SONG IMAGE SMALL -->
    <style name="SongCoverSm">
        <!-- Dimensions -->
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <!-- Alignment -->
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerInParent">true</item>
        <!-- Color -->
        <item name="android:background">@color/white_smoke</item>
    </style>

    <!-- SONG IMAGE LARGE -->
    <!-- FIXME colour -->
    <style name="SongCoverLg">
        <!-- Dimensions -->
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">350dp</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/minimize_btn</item>
        <item name="android:layout_centerHorizontal">true</item>
        <!-- Color -->
        <item name="android:background">@color/white_smoke</item>
    </style>

    <!-- SONG TITLE SMALL -->
    <style name="SongTitleSm">
        <!-- Dimensions -->
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_toEndOf">@id/song_cover</item>
        <item name="android:layout_centerInParent">true</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <!-- Color -->
        <item name="android:background">@color/white_smoke</item>
        <!-- Misc -->
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- SONG TITLE LARGE -->
    <style name="SongTitleLg">
        <!-- Dimensions -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_centerInParent">true</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <!-- MUSIC PLAYER BUTTONS -->
    <style name="MusicPlayerBtn">
        <!-- Dimensions -->
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <!-- Alignment -->
        <item name="android:layout_centerInParent">true</item>
        <!-- Color -->
        <item name="android:background">@color/white_smoke</item>
        <item name="android:tint">@color/black</item>
        <!--Misc -->
        <item name="android:padding">12dp</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="BottomNavigationBar">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_alignParentBottom">true</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Misc -->
        <item name="android:padding">10dp</item>
    </style>

    <!-- ACTUAL FRAGMENT -->
    <style name="Fragment">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <!-- FRAGMENT TITLE -->
    <style name="FragTitle">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- DIVIDER -->
    <style name="Divider">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/toolbar_container</item>
        <!-- Color -->
        <item name="android:background">@color/wolf_grey</item>
        <!-- Misc -->
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- LIBRARY SCROLL VIEW -->
    <style name="LibraryView">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/divider</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <!-- TOOLBAR BUTTON -->
    <style name="ToolbarBtn">
        <!-- Dimensions -->
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <!-- Alignment -->
        <item name="android:layout_centerVertical">true</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <item name="android:tint">@color/red_flag</item>
    </style>

    <!-- PROFILE INFORMATION -->
    <style name="ProfileInfo">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/divider</item>
        <!-- Misc -->
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="InfoTitle">
        <!-- Dimensions -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoDesc">
        <!-- Dimensions -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- FORM CONTAINER -->
    <style name="FormContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <!-- Misc -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- FORM TITLE -->
    <style name="FormTitle">
        <!-- Dimensions -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- FORM FIELD -->
    <style name="FormField">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <!-- Text -->
        <item name="android:ems">8</item>
        <item name="android:textColor">@color/black</item>
        <!-- Color -->
        <item name="android:backgroundTint">@color/red_flag</item>
        <item name="android:textCursorDrawable">@null</item>
        <!-- Misc -->
        <item name="paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- LOG-IN BUTTON -->
    <style name="LoginButton">
        <!-- Dimensions -->
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/login_form_container</item>
        <item name="android:layout_centerInParent">true</item>
        <!-- Text -->
        <item name="android:textSize">16sp</item>
        <!-- Color -->
        <item name="android:background">@drawable/button_shape</item>
        <!-- Misc -->
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- SIGN-UP BUTTON -->
    <style name="SignUpButton">
        <!-- Dimensions -->
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/login_btn</item>
        <item name="android:layout_centerInParent">true</item>
        <!-- Text -->
        <item name="android:textColor">@color/red_flag</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Misc -->
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- UPLOAD IMAGE BUTTON -->
    <style name="UploadImageBtn">
        <!-- Dimensions -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_above">@id/login_form_container</item>
        <item name="android:layout_below">@id/toolbar_container</item>
        <item name="android:layout_centerInParent">true</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <item name="android:tint">@color/red_flag</item>
    </style>

    <!-- MUSIC PLAYER CONTAINER -->
    <style name="MusicPlayerContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Misc -->
        <item name="android:padding">16dp</item>
    </style>

    <!-- PROGRESS BAR -->
    <style name="ProgressBar">
        <!-- Color -->
        <item name="android:progressTint">@color/white</item>
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:thumbTint">@color/white</item>
    </style>

    <!-- ARTIST -->
    <style name="Artist">
        <!-- Dimensions -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_centerInParent">true</item>
        <!-- Text -->
        <item name="android:textColor">@color/red_flag</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <!-- MUSIC PLAYER BUTTONS -->
    <style name="PlayerBtnContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/artist_title</item>
        <item name="android:layout_centerHorizontal">true</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Misc -->
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="PlayerBtn">
        <!-- Dimensions -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_centerInParent">true</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <!-- VOLUME CONTAINER -->
    <style name="VolumeContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="VolumeIcon">
        <!-- Dimensions -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_centerInParent">true</item>
        <!-- Color -->
        <item name="android:tint">@color/wolf_grey</item>
    </style>

    <style name="VolumeBar">
        <!-- Dimensions -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_toEndOf">@id/low_volume</item>
        <item name="android:layout_toStartOf">@id/high_volume</item>
        <!-- Color -->
        <item name="android:progressTint">@color/red_flag</item>
        <item name="android:progressBackgroundTint">@color/wolf_grey</item>
        <item name="android:thumbTint">@color/wolf_grey</item>
        <!-- Misc -->
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- SONG CONTAINER -->
    <style name="SongContainer">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="SongInfo">
        <!-- Dimensions -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_toEndOf">@id/song_cover_item</item>
    </style>

    <style name="SongTitleMd">
        <!-- Dimensions -->
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Misc -->
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ArtistMd">
        <!-- Dimensions -->
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Alignment -->
        <item name="android:layout_below">@id/song_title_item</item>
        <!-- Text -->
        <item name="android:textColor">@color/wolf_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <!-- Color -->
        <item name="android:background">@color/white</item>
        <!-- Misc -->
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>


<!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

<!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>
